{
  "input": {
    "video_path": "inputs/arducam_tag3.mp4",
    "scale_factor": 1.0,
    "use_roi": false
  },
  "tag": {
    "family": "tag36h11",
    "id_expected": 3,
    "size_meters": 0.1
  },
  "sampling": {
    "warp_size": 96,
    "cells": 6,
    "border_cells": 1
  },
  "decode": {
    "max_hamming": 4
  },
  "edges": {
    "mode": "CPU_CANNY",
    "low_thresh": 30,
    "high_thresh": 90
  },
  "quads": {
    "min_area": 400.0,
    "max_area": 20000.0,
    "min_aspect": 0.5,
    "max_aspect": 2.0,
    "max_rect_error_deg": 25.0,
    "max_quads_per_frame": 10
  },
  "corner_refine": {
    "mode": "GPU",
    "window_size": 5,
    "max_iters": 5,
    "epsilon": 0.03,
    "step_max": 0.5,
    "det_min": 1e-4,
    "grad_thresh": 1.0,
    "threads_per_block": 256,
    "allow_failover": false,
    "fallback_mode": "CPU",
    "gpu_min_tags": 8,
    "gpu_min_resolution": [1600, 1200]
  },
  "gpu": {
    "enabled": true,
    "tile_width": 16,
    "tile_height": 16,
    "force_cpu_exact_sampling": true,
    "corner": {
      "blur_size": 5,
      "min_area": 4000,
      "max_area": 9000
    }
  },
  "pose": {
    "tag_size_meters": 0.16,
    "use_ippe": true,
    "gpu": {
      "force_cpu_pose": false
    }
  },
  "tracking": {
    "enabled": true,
    "detect_every_n": 5,
    "max_optical_flow_error": 10.0,
    "min_tracked_points": 3,
    "max_rot_delta_deg": 10.0,
    "max_trans_delta_m": 0.2,
    "fallback_on_bad_decode": true
  },
  "outputs": {
    "root": "outputs/",
    "debug_dir": "outputs/debug_phaseX/",
    "metrics_csv": "outputs/metrics_phaseX.csv",
    "report_txt": "outputs/report_phaseX.txt"
  }
}

